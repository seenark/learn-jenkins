pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh 'echo "Fail!"; exit 1'
            }
        }
    }
    
    post {
        always {
            echo 'I will always get executed ðŸ˜„'
        }
        
        success {
            echo 'I will be executed if the previous stages are successful ðŸŽ‰'
        }

        failure {
            echo 'I will be executed if the previous stages fail ðŸ˜­'
        }

        unstable {
            echo 'I will be executed if the previous stages are unstable ðŸ¤¨'
        }
    }
}